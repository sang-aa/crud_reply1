<div class="container">
    작성 번호 : <%=@show_post.id%>
    <br>
    제목 : <%= @show_post.title%>
    <br>
    내용 : <%= @show_post.content%>
    <br>
    <a href="/">[목록]</a>
    
    <a href="/board/edit/<%=@show_post.id%>">[수정]</a>
    
    <a href="/board/destroy/<%=@show_post.id%>">[삭제]</a>
    
    
    <form action="/comment/reply_create" method="POST">
        <div class="form-group">
            <input type="hidden" name="post_id" class="form-control" id="exampleInputPassword1" placeholder="id" value="<%= @show_post.id %>">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">작성자</label>
            <input type="text" name="editor" class="form-control" id="exampleInputPassword1" placeholder="id" value="">
        </div>
        <div class="form-group">
           <label for="comment">content:</label>
           <textarea class="form-control" name="content" rows="3" id="comment" placeholder="댓글을 입력하세요"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    
    <!--댓글을 보여줘야 한다!-->
        <% @show_reply.each do |r| %>
        번호 : <%= r.id %>
        <br>
        제목 : <%= r.editor %>
        <br>
        내용 : <%= r.content %>
        <br>
        <a href="/reply/destroy/<%=r.id%>">[삭제]</a>
        <hr>
        <% end %>
        
    </div>
</div>