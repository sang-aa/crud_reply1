
<div class="container">
    <h1>수정중</h1>
    <form action="/board/update/<%=@edit_post.id%>" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">title</label>
        <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="제목" value="<%=@edit_post.title%>">
        
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">editor</label>
        <input type="text" name="editor" class="form-control" id="exampleInputPassword1" placeholder="editor" value="<%=@edit_post.editor%>">
      </div>
      <div class="form-group">
          <label for="comment">content:</label>
          <textarea class="form-control" name="content" rows="10" id="comment"><%=@edit_post.content%></textarea>
        </div>
      <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
